{
    "info": {
        "_postman_id": "b0f7e9a8-3c2d-4e5f-9a1b-8c7d6e5f4a3b",
        "name": "Kobliat Conversations Platform API - v1 Complete",
        "description": "Complete API Gateway v1 collection with all endpoints.\n\nSupported Authentication Methods:\n- API Key (X-API-Key header)\n- Bearer Token (Authorization: Bearer)\n- Basic Auth (Authorization: Basic)\n\nDefault auth is set to API Key at collection level.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "apikey",
        "apikey": [
            {
                "key": "value",
                "value": "{{api_key}}",
                "type": "string"
            },
            {
                "key": "key",
                "value": "X-API-Key",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Authentication Examples",
            "description": "Examples demonstrating all three supported authentication methods",
            "item": [
                {
                    "name": "API Key Auth (Default)",
                    "request": {
                        "auth": {
                            "type": "apikey",
                            "apikey": [
                                {
                                    "key": "value",
                                    "value": "{{api_key}}",
                                    "type": "string"
                                },
                                {
                                    "key": "key",
                                    "value": "X-API-Key",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations",
                        "description": "Using X-API-Key header for authentication"
                    }
                },
                {
                    "name": "Bearer Token Auth",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{bearer_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations",
                        "description": "Using Bearer token in Authorization header"
                    }
                },
                {
                    "name": "Basic Auth",
                    "request": {
                        "auth": {
                            "type": "basic",
                            "basic": [
                                {
                                    "key": "username",
                                    "value": "{{basic_auth_username}}",
                                    "type": "string"
                                },
                                {
                                    "key": "password",
                                    "value": "{{basic_auth_password}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations",
                        "description": "Using HTTP Basic Authentication"
                    }
                }
            ]
        },
        {
            "name": "Customer Service",
            "description": "Customer management endpoints",
            "item": [
                {
                    "name": "Create Customer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"external_id\": \"{{customer_phone}}\",\n    \"external_type\": \"whatsapp\",\n    \"name\": \"John Doe\"\n}"
                        },
                        "url": "{{api_gateway_url}}/api/v1/customers",
                        "description": "Create a new customer record"
                    }
                },
                {
                    "name": "Get Customer by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/customers/{{customer_id}}",
                        "description": "Retrieve customer details by ID"
                    }
                }
            ]
        },
        {
            "name": "Conversation Service",
            "description": "Conversation management endpoints",
            "item": [
                {
                    "name": "List Conversations",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations",
                        "description": "Get paginated list of all conversations"
                    }
                },
                {
                    "name": "Create Conversation",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"type\": \"direct\",\n    \"participants\": [\"{{customer_id}}\", \"{{secondary_customer_id}}\"]\n}"
                        },
                        "url": "{{api_gateway_url}}/api/v1/conversations",
                        "description": "Create a new conversation between participants"
                    }
                },
                {
                    "name": "Get Conversation",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations/{{conversation_id}}",
                        "description": "Get conversation details by ID"
                    }
                },
                {
                    "name": "Get Conversation Details (Aggregated)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations/{{conversation_id}}/details",
                        "description": "Get conversation with messages and enriched participant data (aggregated endpoint)"
                    }
                }
            ]
        },
        {
            "name": "Messaging Service",
            "description": "Message management endpoints",
            "item": [
                {
                    "name": "Get Conversation Messages",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/conversations/{{conversation_id}}/messages",
                        "description": "Get all messages for a specific conversation"
                    }
                },
                {
                    "name": "Send Text Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"conversation_id\": \"{{conversation_id}}\",\n    \"direction\": \"outbound\",\n    \"body\": \"Hello from API Gateway!\",\n    \"sender_customer_id\": \"{{customer_id}}\"\n}"
                        },
                        "url": "{{api_gateway_url}}/api/v1/messages",
                        "description": "Send a text message"
                    }
                },
                {
                    "name": "Send Message with Media",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"conversation_id\": \"{{conversation_id}}\",\n    \"direction\": \"outbound\",\n    \"body\": \"Check out this image!\",\n    \"sender_customer_id\": \"{{customer_id}}\",\n    \"media_id\": \"{{media_id}}\",\n    \"content_type\": \"image/jpeg\"\n}"
                        },
                        "url": "{{api_gateway_url}}/api/v1/messages",
                        "description": "Send a message with attached media"
                    }
                },
                {
                    "name": "Update Message",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"body\": \"Updated message text\"\n}"
                        },
                        "url": "{{api_gateway_url}}/api/v1/messages/{{message_id}}",
                        "description": "Update an existing message (creates history record)"
                    }
                }
            ]
        },
        {
            "name": "Media Service",
            "description": "Media upload and management endpoints",
            "item": [
                {
                    "name": "Upload Media",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": [],
                                    "description": "File to upload"
                                },
                                {
                                    "key": "owner_service",
                                    "value": "messaging-service",
                                    "type": "text",
                                    "description": "Service uploading the file"
                                }
                            ]
                        },
                        "url": "{{api_gateway_url}}/api/v1/media/upload",
                        "description": "Upload a media file (images, documents, etc.)"
                    }
                },
                {
                    "name": "Get Media Info",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/media/{{media_id}}",
                        "description": "Get media metadata by ID"
                    }
                },
                {
                    "name": "Download Media",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/media/{{media_id}}/download",
                        "description": "Get presigned download URL for media"
                    }
                }
            ]
        },
        {
            "name": "API Logs",
            "description": "API request logging and monitoring",
            "item": [
                {
                    "name": "Get API Logs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{api_gateway_url}}/api/v1/logs?page=1",
                            "host": [
                                "{{api_gateway_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "logs"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number"
                                },
                                {
                                    "key": "method",
                                    "value": "POST",
                                    "disabled": true,
                                    "description": "Filter by HTTP method"
                                },
                                {
                                    "key": "status",
                                    "value": "200",
                                    "disabled": true,
                                    "description": "Filter by status code"
                                },
                                {
                                    "key": "path",
                                    "value": "/api/v1/customers",
                                    "disabled": true,
                                    "description": "Filter by path"
                                }
                            ]
                        },
                        "description": "Get paginated API request logs with optional filters"
                    }
                },
                {
                    "name": "Get Log Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/logs/{{log_id}}",
                        "description": "Get detailed information for a specific log entry"
                    }
                }
            ]
        },
        {
            "name": "Service Logs",
            "description": "Service-level log management",
            "item": [
                {
                    "name": "List Services",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/service-logs",
                        "description": "Get list of all services with log files"
                    }
                },
                {
                    "name": "Get Service Logs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{api_gateway_url}}/api/v1/service-logs/{{service_name}}?lines=100",
                            "host": [
                                "{{api_gateway_url}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "service-logs",
                                "{{service_name}}"
                            ],
                            "query": [
                                {
                                    "key": "lines",
                                    "value": "100",
                                    "description": "Number of lines to retrieve"
                                }
                            ]
                        },
                        "description": "Get logs for a specific service"
                    }
                },
                {
                    "name": "Clear Service Logs",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": "{{api_gateway_url}}/api/v1/service-logs/{{service_name}}",
                        "description": "Clear/delete logs for a specific service"
                    }
                }
            ]
        },
        {
