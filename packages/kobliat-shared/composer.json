{
    "name": "kobliat/shared",
    "description": "Shared utilities for Kobliat microservices",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kobliat Team"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0",
        "aws/aws-sdk-php": "^3.0",
        "psr/log": "^3.0",
        "phpoption/phpoption": "^1.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Kobliat\\Shared\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kobliat\\Shared\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
